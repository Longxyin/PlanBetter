<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:paddingTop="0.0dp"
	android:paddingBottom="0.0dp" android:background="@drawable/face_gallery_bg">
	<ImageView android:id="@+id/goal_rank_img" android:padding="4.0dp"
		android:layout_width="48.0dp" android:layout_height="48.0dp"
		android:scaleType="fitCenter" android:layout_marginLeft="10.0dp"
		/>
	<com.planbetter.view.AlwaysMarqueeTextView
		android:gravity="center_vertical" android:id="@+id/goal_content_textview"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:textColor="#FFF" android:ellipsize="marquee"
		android:layout_marginLeft="5.0dp"
		android:marqueeRepeatLimit="marquee_forever"
		android:layout_marginRight="5.0dp" android:focusableInTouchMode="true"
		android:scrollHorizontally="true" android:singleLine="true"
		android:layout_weight="1" android:focusable="true" android:textSize="20sp" />
	<ImageView android:id="@+id/myCursor" android:clickable="true"
		android:layout_width="43.0dp" android:layout_height="58.0dp"
		android:src="@drawable/goal_edit" />
</LinearLayout>  
