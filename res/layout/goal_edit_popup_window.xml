<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/goal_edit_popup_view"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:background="@drawable/popupview_down"
  >
  	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal">
	    <Button 
			android:id="@+id/goal_edit_btn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_margin="10dip" 
			android:background="@drawable/goal_edit_img"/>
		<Button 
			android:id="@+id/goal_clear_btn" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="0dip"
			android:layout_marginTop="10dip"
			android:layout_marginRight="10dip"
			android:layout_marginBottom="10dip" 
			android:background="@drawable/goal_empty"/>
    </LinearLayout>

</LinearLayout>
